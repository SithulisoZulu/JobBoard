---
const { job, saved } = Astro.props
---
<div class="relative p-6 flex flex-col justify-center items-center md:min-h-[230px] rounded-xl before:absolute before:inset-0 before:z-1 before:border before:border-gray-200 before:rounded-xl before:transition before:hover:border-2 before:hover:border-blue-600 before:hover:shadow-lg dark:before:border-gray-700 dark:before:hover:border-blue-500 dark:rounded-xl dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600 active mb-3 -z-2 transition-all ease-in-out duration-300 hover:bg-blue-100 hover:border-blue-400  dark:hover:bg-[#1E293B] animate">
    <a href={`/jobs/${job.id}`} target="_blank" class="z-10">
        <div class="flex flex-row">
            <div class={`text-rose-800 bg-rose-700 bg-opacity-30 rounded-lg text-sm font-bold p-1 w-auto px-3 shadow-md ${job.isUrgent !== true ? 'hidden' : ''}`}>
                Urgently hiring 
            </div>
        </div>
        <h1 class="font-semibold text-lg capitalize mt-2 dark:text-white">{job.title}</h1>
    
        <h6 class="mt-2 dark:text-white">{job.poster}</h6>
        <h6 class="mt-1 dark:text-white">{job.center}</h6>
    
        <div class="flex flex-row">
            <div class="mt-2 text-green-800 bg-green-700 bg-opacity-30 rounded-lg text-sm font-bold p-1 w-auto px-3 shadow-md">
               {job.salary} <i class="fa fa-heart"></i>
            </div>
    
            <div class="mt-2 ms-3 text-green-800 bg-green-700 bg-opacity-30 rounded-lg text-sm font-bold p-1 w-auto px-3 shadow-md">
                Full-time <i class="fa fa-heart"></i>
            </div>
        </div>
        
        <div class="mt-3 flex flex-row align-middle items-center">
            <i class="fa fa-paper-plane text-blue-500 dark:text-blue-500" aria-hidden="true"></i> <span class="ms-2  dark:text-white">Easily Apply</span>
        </div>
    
        <div class="inline-flex items-center mt-3 mb-2">
            <span class="w-2 h-2 inline-block bg-gray-500 rounded-full me-2"></span>
            <span class="text-gray-600 dark:text-gray-400">{job.duties}</span>
        </div>
    
        <span class="text-sm text-gray-600">{job.date}</span>
    
    </a>

    <div  class="absolute top-0 right-0 ms-34 ">
        <div class="hs-dropdown relative inline-flex">
            <button id="hs-dropdown-default" type="button" class="grid items-center justify-items-end w-auto ms-16 z-30 me-5 mt-5 py-3 px-4 hover:bg-blue-300 rounded-lg transition-all ease-in-out duration-300 dark:text-white dark:hover:bg-gray-700">
                <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
            </button>
          
            <div class="hs-dropdown-menu transition-[opacity,margin] duration hs-dropdown-open:opacity-100 opacity-0 hidden min-w-[15rem] bg-white rounded-lg p-2 mt-2 shadow-lg dark:bg-[#1E293B] dark:border dark:border-gray-700 dark:divide-gray-700 after:h-4 after:absolute after:-bottom-4 after:start-0 after:w-full before:h-4 before:absolute before:-top-4 before:start-0 before:w-full ms-6 z-50" aria-labelledby="hs-dropdown-default">
            {saved === false ? <a href={`/Delete/${job.id}`}  class="flex items-center gap-x-3.5 py-2 px-3 rounded-lg text-sm font-semibold text-gray-800 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-gray-300 dark:focus:bg-gray-700" href="#">
                <i class="ri-bookmark-line text-xl"></i> Save job
              </a> : ''}
              <a href={`/Report/${job.id}`}  class="flex items-center gap-x-3.5 py-2 px-3 rounded-lg text-sm font-semibold text-gray-800 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-gray-300 dark:focus:bg-gray-700" href="#">
                <i class="ri-flag-fill text-xl"></i> Report job
              </a>
              <a href={`/job/${job.id}`} target="_blank" class="flex items-center gap-x-3.5 py-2 px-3 rounded-lg text-sm font-semibold text-blue-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-gray-300 dark:focus:bg-gray-700" href="#">
                <i class="fa fa-paper-plane text-blue-500" aria-hidden="true"></i> Apply now
              </a>
            </div>
          </div>
        
    </div>
</div>