---
 const { type, outline } = Astro.props

 interface Props {
    type?: any;
    outline?: boolean;
 }
 const fullButton = "w-full sm:w-auto whitespace-nowrap p-3 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-non";
 const outlineButton = "w-full sm:w-auto whitespace-nowrap p-3 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-blue-500  text-blue-600 hover:bg-blue-700 hover:bg-opacity-20 hover:border-blue-700 disabled:opacity-50 disabled:pointer-events-non"
---

<button type={type} class={outline ? outlineButton : fullButton} >
    <slot />
</button>