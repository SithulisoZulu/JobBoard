---
import { clsx } from 'clsx'
const { type, id, name, placeholder, required,  disabled, autofocus, error, value } = Astro.props

interface Props {
    type?: any
    id: string
    name: string
    placeholder?: string
    required?: boolean
    disabled?: boolean
    autofocus?: any
    error?:   boolean
    value?: string
}
---

