---
import Button from "@components/ui/Button.astro";
import Input from "@components/ui/Input.astro";
import CancelModalButton from "./CancelModalButton.astro";

const { id } = Astro.params
---

<div id="addReferencesModal" class="hs-overlay hidden w-full h-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto pointer-events-none">
  <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all lg:max-w-4xl lg:w-full m-3 lg:mx-auto items-center">
    <div class="flex flex-col bg-white border shadow-sm rounded-xl pointer-events-auto dark:bg-gray-800 dark:border-gray-700 dark:shadow-slate-700/[.7] ">
      <div class="flex justify-between items-center py-3 px-4 border-b dark:border-gray-700">
        <h3 class="font-bold text-gray-800 dark:text-white">
            Add References
        </h3>
        <button type="button" class="flex justify-center items-center w-7 h-7 text-sm font-semibold rounded-full border border-transparent text-gray-800 hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none dark:text-white dark:hover:bg-gray-700 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" data-hs-overlay="#addReferencesModal">
          <span class="sr-only">Close</span>
          <svg class="flex-shrink-0 w-4 h-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
        </button>
      </div>
      <form action={`/api/accounts/references/${id}`} method="post">
        <div class="p-4 overflow-y-auto">
          <label for="name" class="block text-sm mb-2 dark:text-white font-bold">Reference name</label>
          <Input type="text" id="name" name="name" placeholder='Example: Sithuliso Mondli Zulu' required autofocus />
        </div>
        <div class="p-4 overflow-y-auto">
          <label for="number" class="block text-sm mb-2 dark:text-white font-bold">Reference contact number</label>
          <Input type="text" id="number" name="number" placeholder='Example: 081 255 0538' required autofocus />
        </div>
        <div class="p-4 overflow-y-auto">
          <label for="email" class="block text-sm mb-2 dark:text-white font-bold">Reference email</label>
          <Input type="email" id="email" name="email" placeholder='Example: someone@somemail.com' required autofocus />
        </div>
        
        <div class="flex justify-end items-center gap-x-2 py-3 px-4 dark:border-gray-700 border-t dark:border-t-gray-700">
          <CancelModalButton modal="#addReferencesModal" />
          <Button type="submit">Save reference</Button>
        </div>
      </form>
    </div>
  </div>
</div>