---
import Layout from "@layouts/Layout.astro";
import PageHeader from "@components/profile/PageHeader.astro";
import Button from "@components/ui/Button.astro";

const { id } = Astro.props
---
<Layout title="Job Search | Ready to Work">
    <div class="max-w-[40rem] px-4 py-10 lg:pt-20 sm:px-6 lg:px-8 lg:py-14 mx-auto mt-10 dark:text-white">
        <PageHeader title="Ready to work.?" subtitle="Let employers know that you can begin working right away." href="/Profile"/>
        <form action={`/api/accounts/readyToWork/${id}`} method="post">                
            <div class="mt-10">
                <div class="flex flex-row gap-3">
                    <!-- Switch/Toggle -->
                    <div class="relative inline-block">
                        <input type="checkbox" id="readyToWork" name="readyToWork" class="peer relative w-[3.25rem] h-7 p-px bg-gray-100 border border-gray-200 text-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:ring-blue-600 disabled:opacity-50 disabled:pointer-events-none checked:bg-none checked:text-blue-100 checked:border-blue-200 focus:checked:border-blue-200 dark:bg-gray-800 dark:border-gray-700 dark:checked:bg-blue-800/30 dark:checked:border-blue-800 dark:focus:ring-offset-gray-600 before:inline-block before:w-6 before:h-6 before:bg-white checked:before:bg-blue-600 before:translate-x-0 checked:before:translate-x-full before:rounded-full before:transform before:ring-0 before:transition before:ease-in-out before:duration-200 dark:before:bg-gray-400 dark:checked:before:bg-blue-500">
                        <label for="readyToWork" class="sr-only">switch</label>
                        <span class="peer-checked:text-blue-600 text-gray-500 w-6 h-6 absolute top-0.5 start-0.5 flex justify-center items-center pointer-events-none transition-colors ease-in-out duration-200">
                        <svg class="flex-shrink-0 w-3 h-3" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                        </span>
                        <span class="peer-checked:text-white w-6 h-6 absolute top-0.5 end-0.5 flex justify-center items-center pointer-events-none transition-colors ease-in-out duration-200">
                        <svg class="flex-shrink-0 w-3 h-3" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
                        </span>
                    </div>
                    <!-- End Switch/Toggle -->
                    <div>
                        <label for="available">I am available to start immediately.</label>
                    </div>
                </div>
            </div>
            <div class="mt-10">
                <div class="flex flex-row gap-3">
                    <Button type="submit" >Save</Button>
                    <div  class="w-full sm:w-auto whitespace-nowrap p-3 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-blue-500  text-blue-600 hover:bg-blue-700 hover:bg-opacity-20 hover:border-blue-700 disabled:opacity-50 disabled:pointer-events-non cursor-pointer" data-hs-overlay="#hs-danger-alert">Cancel</div>
                </div>
            </div>
        </form>
    </div>
</Layout>