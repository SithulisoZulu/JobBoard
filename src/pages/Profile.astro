---
import Layout from "@layouts/Layout.astro";
import { supabase } from "@lib/supabase";

const { cookies } = Astro;
const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

const { data, error } = await supabase.auth.setSession({
  refresh_token: refreshToken?.value!,
  access_token: accessToken?.value!,
});

if (error) {
  cookies.delete("sb-access-token", {
    path: "/",
  });
  cookies.delete("sb-refresh-token", {
    path: "/",
  });
}
const user = data?.user

const name = (user?.user_metadata?.displayName.split(' ').map((word: string) => word.charAt(0)));
---

<Layout title={`Profile | ${user?.user_metadata?.displayName ? user?.user_metadata?.displayName : ''}`} >

  <div class="max-w-[40rem] px-4 py-10 lg:pt-20 sm:px-6 lg:px-8 lg:py-14 mx-auto mt-10 ">
    <div class="flex flex-row items-center justify-between">
      <h1 class="font-bold text-3xl dark:text-white">{`${user?.user_metadata?.full_name ? user?.user_metadata?.full_name : user?.user_metadata?.displayName }`}</h1>
      {
        user?.user_metadata?.avatar_url  ? <img src={user?.user_metadata?.avatar_url} alt="user Profile" class="h-16 w-16 md:h-20 md:w-20 rounded-full object-cover shadow-md"> : <div class="h-16 w-16 md:h-20 md:w-20 rounded-full object-cover bg-gray-500  flex items-center justify-center text-3xl font-bold text-white uppercase shadow-md">{name}</div>
      }
    </div>
    <div class="mt-10">
      <a href="/Profile/edit">
        <div class="flex flex-row items-center w-full justify-between">
          <div class="flex flex-col gap-3 text-semibold dark:text-white/65">
            <div class="flex items-center">
              <i class="fa fa-envelope icon" aria-hidden="true"></i> <span class="ms-5 ">{user?.email}</span>
            </div>
            <div class="flex items-center">
              <i class="fa fa-phone icon" aria-hidden="true"></i><span class="ms-5 ">{`${user?.phone ? user?.phone : 'Please add a contact number'}`}</span>
            </div>
            <div class="flex items-center">
              <i class="bi bi-geo-alt-fill icon" aria-hidden="true"></i><span class="ms-5 ">Please add you loacation</span>
            </div>
          </div>
          <div class="dark:text-white">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
          </div>
        </div>
      
      </a>
    </div>

    <div class="mt-10">
      <h1 class="font-bold text-lg dark:text-white">Improve your job matches</h1>
      <div class="flex flex-col gap-3 text-semibold dark:text-white/65">
        <a href="/Profile/qualifications" class="border-t border-b p-1 mt-5 py-3 before:inset-0 dark:border-gray-700 dark:before:border-gray-700 dark:before:hover:border-blue-500  dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600 active -z-2 transition-all ease-in-out duration-300 hover:bg-blue-100 hover:border-blue-400  dark:hover:bg-[#1E293B]">
          <div class="flex flex-row items-center w-full justify-between">
            <div class="flex flex-col">
              <h1 class="font-bold mb-1 text-lg">Qualifications</h1>
              <p class="text-sm text-gray-700 dark:text-white">Highlight your skills and experience.</p>
            </div>
            <div>
              <i class="fa fa-angle-right" aria-hidden="true"></i>
            </div>
          </div>
        </a>
        <a href="/Profile/preferences" class="border-b border-t p-1 py-3 mt-0 before:inset-0 dark:border-gray-700 dark:before:border-gray-700 dark:before:hover:border-blue-500  dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600 active mb-3 -z-2 transition-all ease-in-out duration-300 hover:bg-blue-100 hover:border-blue-400  dark:hover:bg-[#1E293B]">
          <div class="flex flex-row items-center w-full justify-between">
            <div class="flex flex-col">
              <h1 class="font-bold mb-1 text-lg">Job preferences</h1>
              <p class="text-sm text-gray-700 dark:text-white">Save specific details like minimum desired pay and schedule.</p>
            </div>
            <div>
              <i class="fa fa-angle-right" aria-hidden="true"></i>
            </div>
          </div>
        </a>
        <a href="/Profile/ready-to-work" class="border-b border-t p-1 py-3 mt-0 before:inset-0 dark:border-gray-700 dark:before:border-gray-700 dark:before:hover:border-blue-500  dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600 active mb-3 -z-2 transition-all ease-in-out duration-300 hover:bg-blue-100 hover:border-blue-400  dark:hover:bg-[#1E293B]">
          <div class="flex flex-row items-center w-full justify-between">
            <div class="flex flex-col">
              <h1 class="font-bold mb-1 text-lg">Ready to work</h1>
              <p class="text-sm text-gray-700 dark:text-white">Let employers know that you're available to start working as soon as possible.</p>
            </div>
            <div>
              <i class="fa fa-angle-right" aria-hidden="true"></i>
            </div>
          </div>
        </a>
        <a href="/Profile/references" class="border-b border-t p-1 py-3 mt-0 before:inset-0 dark:border-gray-700 dark:before:border-gray-700 dark:before:hover:border-blue-500  dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600 active mb-3 -z-2 transition-all ease-in-out duration-300 hover:bg-blue-100 hover:border-blue-400  dark:hover:bg-[#1E293B]">
          <div class="flex flex-row items-center w-full justify-between">
            <div class="flex flex-col">
              <h1 class="font-bold mb-1 text-lg">My references</h1>
              <p class="text-sm text-gray-700 dark:text-white">Add a list of prople you potential employer can contact for background check.</p>
            </div>
            <div>
              <i class="fa fa-angle-right" aria-hidden="true"></i>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</Layout>
<style>
  .icon {
    font-size: 17px;
  }
</style>