---
import Layout from "@layouts/Layout.astro";
import { User } from 'src/utils/getUser';
import { Accounts } from '../pages/api/accounts/getUserAccount';

const { cookies } = Astro;
const activeUser = User;
const accounts =  Accounts
const account = accounts.filter(acc => acc.userId.toLowerCase() === activeUser?.id.toLowerCase());
const user = account[0]

console.log(user); 

if(!activeUser)
{
	cookies.delete("sb-access-token", {
    path: "/",
  });
  cookies.delete("sb-refresh-token", {
    path: "/",
  });
  Astro.redirect('/Signin')
};

const name = (user?.name.split(' ').map((word: string) => word.charAt(0)));
