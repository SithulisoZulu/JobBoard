---
import Button from "@components/ui/Button.astro"
import Input from "@components/ui/Input.astro"
import Layout from "@layouts/Layout.astro"
import { User } from "src/utils/getUser"

const user = User

console.log(user)
---
<Layout title="Complete setting up your accoutn">

    <div class="max-w-[50rem] px-4 py-28  lg:px-8 mx-auto ">
        <div class="bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700">
          <div class="p-4 sm:p-7">
            <div class="text-center">
              <h2 class="block text-2xl font-bold text-gray-800 dark:text-gray-200">Complete Account</h2>
            </div>
    
            <div class="mt-5">
                <div class="bg-white border border-gray-200 rounded-lg shadow-lg p-4 dark:bg-gray-800 dark:border-gray-700 mb-5" role="alert">
                    <div class="flex">
                      <div class="flex-shrink-0">
                        <svg class="flex-shrink-0 h-4 w-4 text-blue-600 mt-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
                      </div>
                      <div class="ms-3">
                        <h3 class="text-gray-800 font-semibold dark:text-white">
                          Important Notice
                        </h3>
                        <p class="mt-2 text-sm text-gray-700 dark:text-gray-400">
                          Before you can log into your account please confirm your email address, Check the spam folder if you can't see the email. 
                        </p>
                      </div>
                    </div>
                  </div>
              <!-- Form -->
              <form action="/api/accounts/create" method="post">
                <div class="grid gap-y-4">
                    <Input type="text" id="userId" name="userId" value={user?.id} placeholder="Enter Your Name" required={true} autofocus={true} hidden={false} />
                  <!-- Form Group -->
                    <div class="mb-2">
                        <label for="email" class="block text-sm mb-2 dark:text-white">Name <span class="text-rose-700">*</span></label>
                        <div class="relative">
                            <Input type="text" id="name" name="name" placeholder="Enter Your Name" required={true} autofocus={false} />
                        </div>
                    </div>
                  <!-- End Form Group -->
    
                  <!-- Form Group -->
                  <div class="mb-2">
                    <label for="email" class="block text-sm mb-2 dark:text-white">Surname <span class="text-rose-700">*</span></label>
                    <div class="relative">
                      <Input type="text" id="surname" name="surname" placeholder="Enter Your surname" required={true} autofocus={false} />
                    </div>
                  </div>
                  <!-- End Form Group -->  

                  <!-- Form Group -->
                  <div class="mb-2">
                    <label for="password" class="block text-sm mb-2 dark:text-white">Contact number <span class="text-rose-700">*</span></label>
                    <div class="relative">
                      <Input type="text" id="number" name="number" placeholder="Enter contact number" required={true} autofocus={false} />
                      <div class="hidden absolute inset-y-0 end-0 items-center pointer-events-none pe-3">
                        <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                        </svg>
                      </div>
                    </div>
                  </div>
                  <!-- End Form Group -->

                  <!-- Form Group -->
                  <div class="mb-2">
                    <label for="password" class="block text-sm mb-2 dark:text-white">Headline <span class="text-rose-700">*</span></label>
                    <div class="relative">
                      <Input type="text" id="headline" name="headline" placeholder="Example: Software Developer" required={true} autofocus={true} />
                      <div class="hidden absolute inset-y-0 end-0 items-center pointer-events-none pe-3">
                        <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                        </svg>
                      </div>
                    </div>
                    <p class="hidden text-xs text-red-600 mt-2" id="password-error">8+ characters required</p>
                  </div>
                  <!-- End Form Group -->
    
                  <!-- Form Group -->
                  <div class="mb-2">
                    <label for="country" class="block text-sm mb-2 dark:text-white">Country</label>
                    <div class="relative">
                      <Input type="text" id="country" name="country" value="South Africa" placeholder="South Africa" required={true} autofocus={false} disabled={true} />
                      <div class="hidden absolute inset-y-0 end-0 items-center pointer-events-none pe-3">
                        <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                        </svg>
                      </div>
                  </div>
                  <!-- End Form Group -->

                  <!-- Form Group -->
                  <div class="mb-2">
                    <label for="street" class="block text-sm mb-2 dark:text-white">Street Address <span class="text-rose-700">*</span></label>
                    <div class="relative">
                      <Input type="text" id="street" name="street" placeholder="Example: Thokoza area" required={true} autofocus={false} />
                      <div class="hidden absolute inset-y-0 end-0 items-center pointer-events-none pe-3">
                        <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                        </svg>
                      </div>
                    </div>
                  </div>
                  <!-- End Form Group -->

                  <!-- Form Group -->
                  <div class="mb-2">
                    <label for="city_state" class="block text-sm mb-2 dark:text-white">City, State <span class="text-rose-700">*</span></label>
                    <div class="relative">
                      <Input type="text" id="city_state" name="city_state" placeholder="Example: Ulundi, Kwazulu-Natal" required={true} autofocus={false} />
                      <div class="hidden absolute inset-y-0 end-0 items-center pointer-events-none pe-3">
                        <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                        </svg>
                      </div>
                    </div>
                  </div>
                  <!-- End Form Group -->
                  
                  <!-- Form Group -->
                  <div class="mb-2">
                    <label for="postalCode" class="block text-sm mb-2 dark:text-white">Postal code <span class="text-rose-700">*</span></label>
                    <div class="relative">
                      <Input type="text" id="postalCode" name="postalCode" placeholder="Example: 3838" required={true} autofocus={false} />
                      <div class="hidden absolute inset-y-0 end-0 items-center pointer-events-none pe-3">
                        <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                        </svg>
                      </div>
                    </div>
                  </div>
                  <!-- End Form Group -->
    
                  <button type="submit" class="w-full sm:w-auto whitespace-nowrap p-3 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-non" >Save Details</button>
                </div>
              </form>
              <!-- End Form -->
          </div>
        </div>
    </div>
</Layout>